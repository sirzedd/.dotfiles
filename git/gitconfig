  # Pulling
  pulldevelop = "!git checkout develop && git pull --set-upstream origin develop && git checkout -"

  ## Checkout files
  #Use ctrl-tab to select multiple
  checkoutfiles = "!f() { git checkout $(git status -s | fzf | awk '{print $2}'); }; f"

  ##Restore files that are staged
  restorefiles = "!git diff --name-only --cached | fzf --print0 -m | xargs -0 -t -o git restore --staged"

  ##Deleting
  deleteremotebranches = "!f() { git branch --merged | egrep -v '(^\\*|develop|main)' | fzf -m | xargs -r git branch -d; }; f"
  deletebranches = "!f() { git branch --format='%(refname:short)' | fzf -m | xargs git branch -D; }; f"
  prune-branches = '!git remote prune origin && git branch -vv | grep ": gone]" | awk "{print $1}" | xargs git branch -D'

  ## Stash
  stash-apply = "!git stash list | fzf --reverse --height=50% | cut -d: -f1 | xargs -r git stash apply"
  # git sp -u to include untracked files or -a to include ignored files
  # git sp "Stash"
  sp = '!f() { git stash push -m "$1" "$@"; }; f'
  #  quick stash 
  st = !git stash push -m


  ls = log --oneline
  #fdiff = "! preview='git diff $@ --color=always -- {-1}' && git diff $@ --name-only | fzf -m --ansi --preview $preview "
  #fdiff = "! gitdiff"
  #gra =   "!f() { A=$(pwd) && TOPLEVEL=$(git rev-parse --show-toplevel) && cd $TOPLEVEL && git grep --full-name -In $1 | xargs -I{} echo $TOPLEVEL/{} && cd $A; }; f"
  #la = "!git config -l | grep alias | cut -c 7-"
  cod = checkout  develop
  fb = !zsh -c fbr
  fadd = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
  fco = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git checkout"
  frestore = "!git diff --name-only --cached | fzf --print0 -m | xargs -0 -t -o git restore --staged"
  fmerge = "!fmerge"
  fdiff = "!fdiff"
  fstash = "!fstash"  
