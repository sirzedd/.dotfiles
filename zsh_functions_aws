###
# Environment
###
export TERRAFORM_VERSION=0.12.29

###
# Functions
###

function aws_sign_in() {
	read "token?Enter your MFA token:"
	readonly access_key=$(lpass show aws-jhendricks --field "Access Key ID")
	readonly secret_key=$(lpass show aws-jhendricks --field "Secret Access Key")
	readonly mfa=$(lpass show aws-jhendricks --field "MFA ARN")
	eval $(AWS_ACCESS_KEY_ID=$access_key AWS_SECRET_ACCESS_KEY=$secret_key aws-auth --serial-number $mfa --token-code "$token")
}

function aws_sign_in_dev() {
	read "token?Enter your MFA token:"
	readonly access_key=$(lpass show aws-jhendricks --field "Access Key ID")
	readonly secret_key=$(lpass show aws-jhendricks --field "Secret Access Key")
	readonly mfa=$(lpass show aws-jhendricks --field "MFA ARN")
	eval $(AWS_ACCESS_KEY_ID=$access_key AWS_SECRET_ACCESS_KEY=$secret_key aws-auth --serial-number $mfa --token-code "$token" --role-arn arn:aws:iam::331953783784:role/allow-full-access-from-other-accounts)
}

function tg-dev() {
	readonly dev_full_arn="arn:aws:iam::331953783784:role/allow-full-access-from-other-accounts"
	terragrunt $@ --terragrunt-iam-role $dev_full_arn
}
